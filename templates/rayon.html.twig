{% extends 'base.html.twig' %}

{% block title "Boutique" %}

{% block body %}
    <div class="card col-md-12">
        <div class="card-body row">
            {% for produit in products %}
            <div class="col-md-2">
                <div class="card clickable" onclick="location = '{{ path('panier_ajouter', { idProduit: produit.id }) }}'">
                    <img src="{{ asset(produit.visuel) }}" class="card-img-produit">
                    <div class="card-body">
                        <h4 class="card-title">{{ produit.libelle }}</h4>
                        <p class="card-text"><i>{{ produit.texte }}</i></p>
                        <h2><span class="badge badge-primary"><i class="fas fa-cart-plus"> {{ produit.prix }} â‚¬</i></span></h2>
                    </div>
                </div>
            </div>
        {% endfor %}
        </div>
    </div>
{% endblock %}
