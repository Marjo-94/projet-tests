{% extends "base.html.twig" %}

{% block title %}
    Boutique
{% endblock %}

{% block body %}

    <div class="card col-md-12">
        <div class="card-body row">
            {% for category in categories %}
            <div class="col-md-2">
                <div class="card clickable" onclick="location = '{{ path('rayon', {idCategory: category.id}) }}'">
                    <img src="{{ asset(category.visuel) }}" class="card-img-top">
                    <div class="card-body">
                        <h4 class="card-title">{{ category.libelle }}</h4>
                        <p class="card-text">{{ category.texte }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
        </div>
    </div>
        
{% endblock %}
